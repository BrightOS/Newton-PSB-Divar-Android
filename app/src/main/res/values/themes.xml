<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Newton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#000000</item>
        <item name="colorSecondary">#fb4418</item>
        <item name="cardBackground">#f2f2f2</item>
        <item name="bottomNavigationBackground">#f6f5ff</item>
        <item name="android:candidatesTextStyleSpans">candidates</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>

        <item name="android:actionBarStyle">@style/Newton.Transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorBad">@color/red_600</item>
        <item name="colorMedium">@color/yellow_600</item>
        <item name="colorGood">@color/green_600</item>
        <item name="colorUnknown">@color/light_blue_200</item>
        <item name="colorMenuChecked">@color/grey_700</item>
        <item name="colorMenuNotChecked">@color/grey_500</item>

        <item name="background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>

        <item name="android:popupMenuStyle">@style/Newton.PopUp</item>
    </style>

    <style name="Newton.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Newton">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>